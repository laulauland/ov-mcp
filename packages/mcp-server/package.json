{
  "name": "@ov-mcp/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "MCP server for Dutch public transport data",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ov-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun && tsc --emitDeclarationOnly",
    "start": "bun run dist/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .cache"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@ov-mcp/gtfs-parser": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "gtfs",
    "public-transport",
    "netherlands",
    "dutch-transit",
    "ov"
  ],
  "author": "Laurynas Keturakis",
  "repository": {
    "type": "git",
    "url": "https://github.com/laulauland/ov-mcp.git",
    "directory": "packages/mcp-server"
  }
}
